<div class="container">
  <div class="row">
    <div class="col-md-2">
      <h1>Login</h1>
    </div>
  </div>

  <%= form_tag '/login' do %>
    <div class="row">
      <div class="col-md-6 py-2">
        <%= email_field_tag :email, nil, placeholder: "Email", class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 py-2">
        <%= password_field_tag :password, nil, placeholder: "Password", class: "form-control" %>
      </div>
    </div>
    <div class="row">
    <div class="col-md-2">
      <%= submit_tag "Submit", class: "btn btn-primary" %>
    </div>
    </div>

  <% end %>
</div>